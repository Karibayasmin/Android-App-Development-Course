<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/bg_circle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_name_first_word"
        app:layout_constraintTop_toTopOf="@+id/imageView_circle"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_circle"
        app:layout_constraintStart_toStartOf="@+id/imageView_circle"
        app:layout_constraintEnd_toEndOf="@+id/imageView_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="K"
        android:textSize="28sp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_name"
        app:layout_constraintTop_toBottomOf="@+id/imageView_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="Please type your name"
        android:layout_marginHorizontal="12dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_profession"
        app:layout_constraintTop_toBottomOf="@+id/editText_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="Please type your profession"
        android:layout_marginHorizontal="12dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextMobileNumber"
        app:layout_constraintTop_toBottomOf="@+id/editText_profession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:hint="Please type your mobile number"
        android:layout_marginHorizontal="12dp"
        android:inputType="number"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Save"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/bg_rectangle_solid_black_rad_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>