<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_download"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_author_name"
        app:layout_constraintTop_toBottomOf="@+id/imageView_photo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/author"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_website_url"
        app:layout_constraintTop_toBottomOf="@+id/textView_author_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/website_url"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_website_url_value"
        app:layout_constraintTop_toBottomOf="@+id/textView_author_name"
        app:layout_constraintBottom_toBottomOf="@+id/textView_website_url"
        app:layout_constraintStart_toEndOf="@+id/textView_website_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/website_url"
        android:textSize="20sp"
        android:textColor="@color/teal_700"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_download_url"
        app:layout_constraintTop_toBottomOf="@+id/textView_website_url"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/download_url"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_download_url_value"
        app:layout_constraintTop_toBottomOf="@+id/textView_website_url"
        app:layout_constraintBottom_toBottomOf="@+id/textView_download_url"
        app:layout_constraintStart_toEndOf="@+id/textView_download_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="@string/download_url"
        android:textSize="20sp"
        android:textColor="@color/teal_700"/>

</androidx.constraintlayout.widget.ConstraintLayout>